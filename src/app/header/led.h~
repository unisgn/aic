#ifndef __GPIO_LED_H__
#define __GPIO_LED_H__
#include <stm32f10x.h>

#define LED_PORT GPIOF
#define LED_DS1 GPIO_Pin_7
#define LED_DS2 GPIO_Pin_8
#define LED_DS3 GPIO_Pin_9
#define LED_DS4 GPIO_Pin_10

#define LED_DS1_ON() do { GPIO_SetBits(LED_PORT, LED_DS1) ; } while(0)
#define LED_DS1_OFF() do { GPIO_ResetBits(LED_PORT, LED_DS1) ; } while(0)
#define LED_DS2_ON() do { GPIO_SetBits(LED_PORT, LED_DS2) ; } while(0)
#define LED_DS2_OFF() do { GPIO_ResetBits(LED_PORT, LED_DS2) ; } while(0)
#define LED_DS3_ON() do { GPIO_SetBits(LED_PORT, LED_DS3) ; } while(0)
#define LED_DS3_OFF() do { GPIO_ResetBits(LED_PORT, LED_DS3) ; } while(0)
#define LED_DS4_ON() do { GPIO_SetBits(LED_PORT, LED_DS4) ; } while(0)
#define LED_DS4_OFF() do { GPIO_ResetBits(LED_PORT, LED_DS4) ; } while(0)


#endif
